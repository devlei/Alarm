<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_F6F9FE"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/s_10"
    android:paddingLeft="@dimen/s_15"
    android:paddingRight="@dimen/s_15"
    android:paddingTop="@dimen/s_10">

    <ImageButton
        android:id="@+id/play"
        android:layout_width="@dimen/s_34"
        android:layout_height="@dimen/s_34"
        android:background="@drawable/icon_play_small"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/s_5"
        android:text="10:20"
        android:textColor="@color/color_4982F5"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/s_140"
        android:layout_height="5dp"
        android:layout_marginLeft="@dimen/s_10"
        android:layout_weight="1"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/progressbar_horizontal"/>
</LinearLayout>