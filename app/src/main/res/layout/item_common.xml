<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/s_5"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/s_10"
    android:paddingLeft="@dimen/s_15"
    android:paddingRight="@dimen/s_15"
    android:paddingTop="@dimen/s_10">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/common_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="正在处理"
            android:textColor="@android:color/black"
            android:textSize="@dimen/f_15"/>

        <TextView
            android:id="@+id/common_top_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/s_5"
            android:text="31/7 10:29"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/f_13"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/common_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s_5"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="详细内容"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/f_13"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s_5">

        <TextView
            android:id="@+id/common_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/s_10"
            android:layout_toLeftOf="@+id/common_bottom_time"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="北京市朝阳区和平街15区"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/f_13"/>

        <TextView
            android:id="@+id/common_bottom_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/s_5"
            android:text="2017-9-31 10:29"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/f_13"/>
    </RelativeLayout>
</LinearLayout>
