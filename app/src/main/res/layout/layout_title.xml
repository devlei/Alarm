<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/s_40"
    android:layout_marginTop="@dimen/s_25"
    android:background="@color/color_2271F1"
    android:orientation="horizontal">

    <Button
        android:id="@+id/title_back"
        android:layout_width="@dimen/s_40"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/s_1"
        android:background="@drawable/icon_back_arrow" />

    <TextView
        android:id="@+id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/hall"
        android:textColor="@android:color/white"
        android:textSize="@dimen/f_16" />

    <TextView
        android:id="@+id/title_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/s_15"
        android:text="@string/mine"
        android:textColor="@android:color/white"
        android:textSize="@dimen/f_16" />
</RelativeLayout>