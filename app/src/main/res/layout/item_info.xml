<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/s_10"
    android:paddingRight="@dimen/s_10"
    android:paddingTop="@dimen/s_16">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="@dimen/s_46"
        android:layout_height="@dimen/s_46"
        android:background="@drawable/icon_cases" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s_8"
        android:text="@string/cases"
        android:textColor="@android:color/black"
        android:textSize="@dimen/f_13" />

</LinearLayout>