<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_4982F5"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F6F6FA"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_200"
            android:background="@android:color/white"
            android:paddingLeft="@dimen/s_15"
            android:paddingRight="@dimen/s_15"
            android:paddingTop="@dimen/s_10">

            <EditText
                android:id="@+id/pia_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/info_input_hint"
                android:textColor="@android:color/black"
                android:textSize="@dimen/f_13" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/imgarray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_53"
            android:background="@android:color/white"
            android:paddingLeft="@dimen/s_15">

            <ImageView
                android:id="@+id/imgadd"
                android:layout_width="@dimen/s_50"
                android:layout_height="match_parent"
                android:background="@drawable/addimg" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>