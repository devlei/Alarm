<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_4982F5"
    android:orientation="vertical">


    <include layout="@layout/layout_title" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F6F6FA"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/s_10"
            android:layout_marginLeft="@dimen/s_15"
            android:layout_marginRight="@dimen/s_15"
            android:layout_marginTop="@dimen/s_10">

            <EditText
                android:id="@+id/common_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s_33"
                android:background="@drawable/bg_search"
                android:hint="@string/search_hint"
                android:inputType="text"
                android:paddingLeft="@dimen/s_10"
                android:paddingRight="@dimen/s_28"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/f_13" />

            <ImageView
                android:layout_width="@dimen/s_13"
                android:layout_height="@dimen/s_13"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/s_15"
                android:background="@drawable/icon_search" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/commonSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>