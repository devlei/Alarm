<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_247"
            android:background="@drawable/bg_login"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_40"
            android:layout_marginTop="@dimen/s_30"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/s_15"
                android:layout_height="@dimen/s_17"
                android:layout_marginLeft="@dimen/s_25"
                android:background="@drawable/icon_login"/>

            <EditText
                android:id="@+id/login_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/phone_number"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="@dimen/s_25"
                android:textColor="@android:color/black"
                android:textSize="@dimen/f_13"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_1"
            android:layout_marginLeft="@dimen/s_25"
            android:layout_marginRight="@dimen/s_25"
            android:background="@color/color_F6F6FA"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_40"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/s_15"
                android:layout_height="@dimen/s_17"
                android:layout_marginLeft="@dimen/s_25"
                android:background="@drawable/icon_password"/>

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/login_password_hint"
                android:inputType="textPassword"
                android:maxLength="18"
                android:paddingLeft="@dimen/s_25"
                android:textColor="@android:color/black"
                android:textSize="@dimen/f_13"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_1"
            android:layout_marginLeft="@dimen/s_25"
            android:layout_marginRight="@dimen/s_25"
            android:background="@color/color_F6F6FA"/>

        <Button
            android:id="@+id/login_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_40"
            android:layout_marginLeft="@dimen/s_15"
            android:layout_marginRight="@dimen/s_15"
            android:layout_marginTop="@dimen/s_40"
            android:background="@drawable/button_selector"
            android:text="@string/login"
            android:textColor="@android:color/white"
            android:textSize="@dimen/s_15"/>

        <Button
            android:id="@+id/login_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_40"
            android:layout_marginLeft="@dimen/s_15"
            android:layout_marginRight="@dimen/s_15"
            android:layout_marginTop="@dimen/s_20"
            android:background="@drawable/button_register_selector"
            android:text="@string/register"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/s_15"/>
    </LinearLayout>

    <TextView
        android:id="@+id/login_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/s_20"
        android:text="V1.0"
        android:textColor="@color/color_D3D3D3"
        android:textSize="@dimen/f_15"/>
</RelativeLayout>